<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:imageButtonStyle">@style/CustomImageButton</item>
    </style>
   
    
    <!-- ActionBar styles -->
    <style name="CustomActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_bg</item>
        <item name="android:subtitleTextStyle">@style/CustomActionBarSubtitle</item>
    </style>
    
    <style name="CustomActionBarSubtitle"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#990f3949</item>
    </style>
    
    <!-- Button styles -->
    <style name="CustomButton"
           parent="@android:style/Widget.Holo.Button">
        	<item name="android:background">@drawable/button_custom</item>
    </style>

    <!-- Image Button styles -->
    <style name="CustomImageButton"
           parent="@android:style/Widget.Holo.ImageButton">
        	<item name="android:background">@drawable/button_custom</item>
    </style>

</resources>
